<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_card_light"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:id="@+id/ll_Add_Edit_Profile_Summary_Card"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/card_background"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_Add_Edit_Profile_Avatar"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:contentDescription="Profile picture"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/profile_photo" />

            <TextView
                android:id="@+id/et_Add_Edit_Profile_First_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Emily"
                android:textAllCaps="true"
                android:textColor="@color/main_theme"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_Add_Edit_Profile_Avatar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/et_Add_Edit_Profile_Last_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Nelson"
                android:textAllCaps="true"
                android:textColor="@color/main_theme"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/et_Add_Edit_Profile_First_Name"
                app:layout_constraintTop_toBottomOf="@+id/et_Add_Edit_Profile_First_Name" />

            <TextView
                android:id="@+id/tv_Add_Edit_Profile_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_light"
                android:padding="2dp"
                android:text="Email"
                android:textColor="@color/main_theme"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/et_Add_Edit_Profile_Last_Name"
                app:layout_constraintTop_toBottomOf="@+id/et_Add_Edit_Profile_Last_Name" />

            <TextView
                android:id="@+id/tv_Profile_Email_Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="4dp"
                android:text="emily.nelson@gmail.com"
                android:textColor="@color/main_theme"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/et_Add_Edit_Profile_Last_Name"
                app:layout_constraintTop_toBottomOf="@+id/tv_Add_Edit_Profile_Email" />

            <TextView
                android:id="@+id/tv_Profile_DoB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_light"
                android:padding="2dp"
                android:text="Date of Birth"
                android:textColor="@color/main_theme"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/et_Add_Edit_Profile_Last_Name"
                app:layout_constraintTop_toBottomOf="@+id/tv_Profile_Email_Value" />

            <TextView
                android:id="@+id/tv_Add_Edit_Profile_DoB_Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="2dp"
                android:text="December, 07, 1995"
                android:textColor="@color/main_theme"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/et_Add_Edit_Profile_Last_Name"
                app:layout_constraintTop_toBottomOf="@+id/tv_Profile_DoB" />

            <TextView
                android:id="@+id/tv_Add_Edit_Profile_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_light"
                android:padding="2dp"
                android:text="Address"
                android:textColor="@color/main_theme"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/et_Add_Edit_Profile_Last_Name"
                app:layout_constraintTop_toBottomOf="@+id/tv_Add_Edit_Profile_DoB_Value" />

            <TextView
                android:id="@+id/tv_Add_Edit_Profile__Address_Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="2dp"
                android:text="Mashinani, Kisii"
                android:textColor="@color/main_theme"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/et_Add_Edit_Profile_Last_Name"
                app:layout_constraintTop_toBottomOf="@+id/tv_Add_Edit_Profile_Address" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Bio_Card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="24dp"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_Add_Edit_Profile_Summary_Card">

        <TextView
            android:id="@+id/tv_Add_Edit_Profile_Bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/roboto"
            android:text="BIO"
            android:textColor="@color/main_theme"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv__Add_Edit_Profile_Bio_Value"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:ellipsize="marquee"
            android:fontFamily="@font/roboto"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="4"
            android:scrollHorizontally="true"
            android:text="Summary"
            android:textColor="@color/main_theme"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Social_Links_Card"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/card_background"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_Bio_Card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv__Add_Edit_Profile_Social_Links"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/roboto"
                android:text="ON THE WEB"
                android:textColor="@color/main_theme"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/ib__Add_Edit_Profile_Social_Links_LinkedIn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="9dp"
                android:contentDescription="LinkedIn logo"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv__Add_Edit_Profile_Social_Links"
                app:srcCompat="@drawable/linkedin_logo" />

            <ImageButton
                android:id="@+id/ib_Add_Edit_Profile_Social_Links_Twitter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Twitter logo"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/ib__Add_Edit_Profile_Social_Links_LinkedIn"
                app:layout_constraintTop_toBottomOf="@+id/tv__Add_Edit_Profile_Social_Links"
                app:srcCompat="@drawable/twitter_logo" />

            <ImageButton
                android:id="@+id/ib_Add_Edit_Profile_Social_Links_Facebook"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Facebook logo"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/ib_Add_Edit_Profile_Social_Links_Twitter"
                app:layout_constraintTop_toBottomOf="@+id/tv__Add_Edit_Profile_Social_Links"
                app:srcCompat="@drawable/facebook_logo" />

            <ImageButton
                android:id="@+id/ib_Add_Edit_Profile_Social_Links_Instagram"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Instagram logo"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/ib_Add_Edit_Profile_Social_Links_Facebook"
                app:layout_constraintTop_toBottomOf="@+id/tv__Add_Edit_Profile_Social_Links"
                app:srcCompat="@drawable/instagram_logo" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Contacts_Card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/card_background"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_Social_Links_Card">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/roboto"
                android:text="WEBSITE"
                android:textColor="@color/main_theme"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/et_Add_Edit_Profile_Website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto"
                android:text="www.github.com"
                android:textColor="@color/purple_500"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/roboto"
                android:text="PHONE"
                android:textColor="@color/main_theme"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/et_Add_Edit_Profile_Phone_Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="626-398-6547"
                android:textColor="@color/main_theme"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/et_Add_Edit_Profile_Website"
                app:layout_constraintTop_toTopOf="@+id/textView7" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>