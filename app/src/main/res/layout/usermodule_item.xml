<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/ll_title_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        android:padding="8dp"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_username_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="start"
            android:padding="4dp"
            android:text="Name"
            android:textAllCaps="true"
            android:textColor="@color/main_theme"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_userPosition_item"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="start"
            android:padding="4dp"
            android:text="position"
            android:textAllCaps="true"
            android:textColor="@color/main_theme"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            app:layout_constraintTop_toBottomOf="@id/tv_username_item" />
        <TextView
            android:id="@+id/tv_useremail_item"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="start"
            android:padding="4dp"
            android:text="Email"
            android:textAllCaps="true"
            android:textColor="@color/main_theme"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            app:layout_constraintTop_toBottomOf="@id/tv_userPosition_item" />

        <TextView
            android:id="@+id/tv_useremodule_item"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="start"
            android:padding="4dp"
            android:text="Module"
            android:textAllCaps="true"
            android:textColor="@color/main_theme"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            app:layout_constraintTop_toBottomOf="@id/tv_useremail_item" />
    </LinearLayout>


</RelativeLayout>