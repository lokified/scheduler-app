<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/ll_title_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        android:padding="8dp"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_title_schedule_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="start"
            android:padding="4dp"
            android:text="title"
            android:textAllCaps="true"
            android:textColor="@color/main_theme"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_description_schedule_item"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="start"
            android:padding="4dp"
            android:text="Description"
            android:textAllCaps="true"
            android:textColor="@color/main_theme"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            app:layout_constraintTop_toBottomOf="@id/tv_title_schedule_item" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_start_time"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="start"
                android:padding="5dp"
                android:text="17:25"
                android:layout_weight="0.4"
                android:textAllCaps="true"
                android:textColor="@color/green"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="end"
                android:padding="5dp"
                android:text="16:45"
                android:layout_weight="0.4"
                android:textAllCaps="true"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>