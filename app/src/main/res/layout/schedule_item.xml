<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_margin="16dp"
  >


    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:gravity="start"
        android:padding="12dp"
        android:text="16:45"
        android:textAllCaps="true"
        android:textColor="@color/main_theme"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/tv_stop_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_start_time"
        android:fontFamily="@font/roboto_bold"
        android:gravity="start"
        android:padding="12dp"
        android:text="17:25"
        android:textAllCaps="true"
        android:textColor="@color/main_theme"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="2dp"
            android:layout_height="85dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:background="@color/main_theme" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_title_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_title_schedule_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="start"
            android:padding="4dp"
            android:text="title"
            android:textAllCaps="true"
            android:textColor="@color/main_theme"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_description_schedule_item"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="start"
            android:padding="4dp"
            android:text="Description"
            android:textAllCaps="true"
            android:textColor="@color/main_theme"
            android:textSize="10sp"
            android:textStyle="bold|italic"
            app:layout_constraintTop_toBottomOf="@id/tv_title_schedule_item" />

    </LinearLayout>



</RelativeLayout>